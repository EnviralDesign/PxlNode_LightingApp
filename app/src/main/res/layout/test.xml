<?xml version="1.0" encoding="utf-8"?>
<aquilina.ryan.homelightingapp.ui.design_mode.CustomRelativeLayout
        android:id="@+id/holo_picker_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/colorPrimaryDark">

    <LinearLayout
            android:id="@+id/left_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true">

        <android.support.v7.widget.AppCompatButton
                android:id="@+id/blink_button"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Blink"
                android:textColor="@color/colorPrimaryText"
                android:textSize="12sp"
                android:backgroundTint="@color/custom_button_color_state_list"
                style="Widget.AppCompat.Button.Colored"/>

        <android.support.v7.widget.AppCompatButton
                android:id="@+id/pulse_button"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:text="pulse"
                android:textColor="@color/colorPrimaryText"
                android:textSize="12sp"
                android:backgroundTint="@color/custom_button_color_state_list"
                style="Widget.AppCompat.Button.Colored"/>
    </LinearLayout>

    <com.larswerkman.holocolorpicker.ColorPicker
            android:id="@+id/picker"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_toEndOf="@id/left_buttons"
            android:layout_toStartOf="@id/right_buttons"/>

    <LinearLayout
            android:id="@+id/right_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">
        <android.support.v7.widget.AppCompatButton
                android:id="@+id/hue_button"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="hue"
                android:textColor="@color/colorPrimaryText"
                android:textSize="13sp"
                android:backgroundTint="@color/custom_button_color_state_list"
                style="Widget.AppCompat.Button.Colored"/>

        <android.support.v7.widget.AppCompatButton
                android:id="@+id/hue2_button"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:text="hue2"
                android:textColor="@color/colorPrimaryText"
                android:textSize="13sp"
                android:backgroundTint="@color/custom_button_color_state_list"
                style="Widget.AppCompat.Button.Colored"/>
    </LinearLayout>

    <com.larswerkman.holocolorpicker.SVBar
            android:id="@+id/svbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_below="@id/picker"/>

    <com.larswerkman.holocolorpicker.OpacityBar
            android:id="@+id/opacitybar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_below="@id/svbar"/>
</aquilina.ryan.homelightingapp.ui.design_mode.CustomRelativeLayout>