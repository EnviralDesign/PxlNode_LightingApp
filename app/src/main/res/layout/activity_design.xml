<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="@color/colorSecondaryDark">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorSecondaryDark">

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorPrimary"
                app:cardBackgroundColor="@color/colorPrimary"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

            <fr.ganfra.materialspinner.MaterialSpinner
                    android:id="@+id/item_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:background="@color/colorPrimary"
                    android:overlapAnchor="false"
                    app:ms_hint="@string/spinner_hint"
                    app:ms_hintColor="@color/colorSecondaryText"
                    app:ms_arrowColor="@color/colorSecondaryText"
                    app:ms_baseColor="@color/colorSecondaryText"
                    app:ms_highlightColor="@color/colorAccent"
                    app:ms_enableFloatingLabel="false"
                    app:ms_arrowSize="16dp"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorPrimary"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">
                <com.larswerkman.holocolorpicker.ColorPicker
                        android:id="@+id/picker"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="72dp"
                        android:layout_marginRight="72dp"
                        android:layout_marginBottom="32dp"
                        android:layout_gravity="center_horizontal"
                        app:color_center_radius="60dp"
                        app:color_center_halo_radius="62dp"/>

                <com.larswerkman.holocolorpicker.SVBar
                        android:id="@+id/svbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"/>

                <com.larswerkman.holocolorpicker.OpacityBar
                        android:id="@+id/opacitybar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</RelativeLayout>